extends layout

block content
  h1= title
  //- - var results = [{ name: "RestaurantA", cuisine: "Italian", rating: 4.5 }, { name: "RestaurantB", cuisine: "Mexican", rating: 4.2 }, { name: "RestaurantC", cuisine: "Japanese", rating: 4.0 }]
  - var items = results
   div.container-fluid
    div.row
     each item in items
      div.col-sm-2
       h3(style=`color: yellow;background-color: #444;`) #{item.name}
       p(style=`color: green;background-color: #aaa;`) Cuisine: #{item.cuisine}
       p(style=`color: red;background-color: #ddd;`) Rating: #{item.rating}

     each item, index in items
      div(onclick=`buy(${index})`,style=`border:1px solid`)
       Item #{index + 1}. #{item.cuisine}

  script.
   function buy(index) {
    alert(`You purchased item ${index + 1}`);
   }