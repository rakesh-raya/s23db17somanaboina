extends layout

block content
  h1= title
  p Welcome to #{title} , this is an extra line added for local server
  button(type="button", class="btn btn-secondary", onclick="goFaster()") Press Me
  div(id="faster") Increase the speed
  script.
   var mph = 20;
   var change = 1;
   function goFaster() {
     mph += change;
     change += 1;
     document.getElementById('faster').textContent = `MPH ${mph} with change ${change}.`;}